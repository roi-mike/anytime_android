<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pages.TopicsLearnActivity">

    <RelativeLayout
        android:id="@+id/menubarelement"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/menubar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/logoapp"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/logoapp"
            android:layout_marginRight="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            />



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/profile"
            app:civ_border_color="#22B4D8"
            app:civ_border_width="2dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="25dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/proposisionoffer"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:layout_below="@id/menubarelement"
        >

        <ImageView
            android:id="@+id/listverb"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/listverbs"
            android:contentDescription="voir la liste des verbes"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/listbooks"
            android:contentDescription="voir la liste des livres Ã  lire"
            android:layout_below="@id/listverb"
            android:layout_marginTop="55dp"
            />


    </RelativeLayout>














</RelativeLayout>